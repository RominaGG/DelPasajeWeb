---
const { post } = Astro.props;
---

<li class="fan-card">
  <div class="card-image">
    {
      post.image ? (
        <img src={post.image} alt={`Foto de ${post.name}`} loading="lazy" />
      ) : (
        <div class="placeholder-img">ðŸ¤˜</div>
      )
    }
  </div>

  <div class="card-content">
    <blockquote class="fan-message">{post.message}</blockquote>
    <div class="fan-footer">
      <span class="fan-name">{post.name}</span>
      {
        post.instagram && (
          <a
            href={`https://instagram.com/${post.instagram.replace("@", "")}`}
            target="_blank"
            rel="noopener noreferrer"
            class="fan-insta"
          >
            {post.instagram}
          </a>
        )
      }
    </div>
  </div>
</li>

<style>
    .fan-card {
        background: #121212;
        border: 1px solid #333;
        display: flex;
        flex-direction: column;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        max-width: 300px;
        width: 100%;
        margin: 0 auto;
    }

    .fan-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(255, 255, 255, 0.05);
        border-color: #555;
    }

    .card-image {
        width: 100%;
        aspect-ratio: 4 / 3;
        overflow: hidden;
        background: #000;
        border-bottom: 1px solid #222;
    }

    .card-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        
    }

    .placeholder-img {
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 3rem;
        color: #333;
    }

    .card-content {
        padding: 1.5rem;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        flex-grow: 1;
    }

    .fan-message {
        font-style: italic;
        color: white;
        font-size: 0.95rem;
        margin-bottom: 1.5rem;
        line-height: 1.5;
    }

    .fan-footer {
        margin-top: auto;
        border-top: 1px solid #222;
        padding-top: 1rem;
    }

    .fan-name {
        display: block;
        font-weight: 700;
        color: white;
        font-size: 0.9rem;
        letter-spacing: 1px;
    }

    .fan-insta {
        display: block;
        font-size: 0.8rem;
        color: #666;
        text-decoration: none;
        margin-top: 0.2rem;
        transition: color 0.2s;
    }

    .fan-insta:hover {
        color: #fff;
        text-decoration: underline;
    }
</style>
