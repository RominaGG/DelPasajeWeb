---
import VideoEmbed from '../components/VideoEmbed.astro'


const videos = [
    {
        title: 'Sucia Rutina (2024)',
        youtubeUrl: 'https://www.youtube.com/watch?v=0SZk3sZtdqk'
    },
    {
        title: 'Mi Retrato (2025)',
        youtubeUrl: 'https://www.youtube.com/watch?v=3pSkbWFwEV8'
    }
];
---




<section id="media" class="media-section">
    <div class="main-container">
    <h2 class="section-title">Videos</h2>

    <ul class="video-grid">
        {videos.map(video => (
           <li class="video-card"> 
        <VideoEmbed 
        title={video.title}
        youtubeUrl={video.youtubeUrl}
        />
        <div class="info-container">
            <h3 class="video-title">{video.title}</h3>
        </div>
    </li> 
        ))}
        </ul>
    </div>
</section>

<style>
    
    .video-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
        gap: 2rem;
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .video-card {
        background: #1a1a1a;
        padding: 1rem;
        border: 1px solid #333;
        transition: all 0.3s ease;
    }

    .video-card:hover {
        transform: translateY(-5px);
        border-color: #fff;
        box-shadow: 0 10px 20px rgba(255, 255, 255, 0.1);
    }

    .info-container {
        margin-top: 1rem;
        text-align: left;
    }

    .video-title {
        font-size: 1.1rem;
        font-weight: 600;
        margin: 0;
        color: #482203;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .video-card:hover, .video-title {
        color: #fff;
    }
</style>