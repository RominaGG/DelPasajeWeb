---
const year = new Date().getFullYear();

const socialLinks = [
  {name: 'Instagram', url: "https://www.instagram.com/delpasajerock", icon: "/assets/icons/instagram.png"},
  {name: 'YouTube', url: "https://www.youtube.com/@delpasajerock" , icon: "/assets/icons/youtube.png"},
  {name: 'Spotify', url: "https://open.spotify.com/artist/0EGuCdH8jHq1Pztof3LLvw?si=GbtWHt0OSGKQ6jystxdqoA", icon: "/assets/icons/spotify.png"},
  {name: 'Deezer', url: "https://www.deezer.com/es/artist/284010661", icon: "/assets/icons/deezer.png"},
  {name: 'AmazonMusic', url: "https://music.amazon.es/artists/B0DJ995CVQ/del-pasaje", icon: "/assets/icons/amazon-music.png"},
  {name: 'AppleMusic', url: "https://music.apple.com/ar/artist/del-pasaje/1771570291", icon: "/assets/icons/apple-music.png"},

];
---

<footer class="footer">
  <div class="main-container footer-content">
    
<div class="footer-brand">
  <h3>DEL PASAJE</h3>
</div>

<ul class="footer-social">
  {socialLinks.map(link => (
    <li>
      <a href={link.url} target="_blank" rel="noopener" aria-label={link.name}>
        <img src={link.icon} alt={link.name} class="social-icon" />
      </a>
    </li>
  ))}
</ul>

<div class="footer-copy">
  <p>&copy; {year} Del Pasaje.</p>
  <p class="rights">Todos los derechos reservados.</p>
</div>
    
   
</footer>


<style>
  .footer {
    margin-top: 3rem;
    padding: 2rem 0 2rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    background: linear-gradient(to bottom, #000, #0a0a0a);
}

.footer-content {
    
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: 1.5rem;
}
.footer-brand h3 {
    font-family: var(--font-title);
    font-size: 1.8rem;
    color: white;
    letter-spacing: 2px;
    margin: 0;
    text-transform: uppercase;
    opacity: 0.7;
}

.footer-social {
  list-style: none;
  padding: 0;
  margin: 0;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  gap: 1.5rem;
}

.footer-social a {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 40px;
  height: 40px;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.05);
  transition: all 0.3s ease;
}

.social-icon {
  width: 20px;
  height: 20px;
  object-fit: contain;
  opacity: 0.7;
  transition: all 0.3s ease;

  filter: invert(1);
}

.footer-social a:hover .social-icon {
  opacity: 1;
  filter: invert(0);
}

.footer-copy {
  margin-top: 1rem;
  font-size: 0.85rem;
  color: #666;
  display: flex;
  flex-direction: column;
  gap: 0.2rem;
}

.rights {
  font-size: 0.75rem;
  opacity: 0.6;
  text-transform: uppercase;
  letter-spacing: 1px;
}

@media (max-width: 600px) {
  .footer-social {
    gap: 1rem;
  }

  .footer-social a {
    width: 35px;
    height: 35px;
  }
}
</style>